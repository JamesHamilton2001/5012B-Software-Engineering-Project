extends layout

block content

  h1= title

  .panel

    a.button(href = "/login") Log in
    a.button(href = "/signup") Sign up

    #Signup
      form(method='post')
        h2 #{error}
        input#username(type='text' name='username' placeholder='Username' value=`${username}`)
        input#email(type='email' name='email' placeholder='Email' value=`${email}`)
        input#password(type='password' name='password' placeholder='Password' value=`${password}`)
        //- input#ConfirmPassword(type='password' name='ConfirmPassword' placeholder='Confirm Password')
        input#real_name(type='text' name='real_name' placeholder='Real Name' value=`${real_name}`)
        input#height(type='text' name='height' placeholder='Height (e.g. 180cm, 5′4″)' value=`${height}`)
        input(type='submit' value='Sign Up')
