extends layout
include navBar

block append head
  link(rel='stylesheet' href='/css/dashboard.scss')/
  script(type='module', src="/javascripts/dashboard.js" defer)
  script(src="https://cdn.jsdelivr.net/npm/chart.js")
  +navBarLinkAndScripts()

block content
  +navBar("Welcome to Healthmate ")

  menu
    li(data-display='stats') Stats
    li(data-display='groups') Groups
    li(data-display='goals') Goals
    li(data-display='exercise') Exercise
    li(data-display='meal') Meals
    li(data-display='weight') Weight

  main


block append footer
   a(href='/auth/logout') Logout

