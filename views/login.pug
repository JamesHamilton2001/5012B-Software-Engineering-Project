extends layout

block content


  
  link(rel='stylesheet' href='/css/login.scss')


  h1=title
  

            
  .panel
   
    #Login
    h3 #{error}
      form(method='post')

        input#username(type='text' name='username' placeholder='Username' value=`${username}` required)

        input#password(type='password' name='password' placeholder='Password' required)

        input(type='submit' value=' Log In')

          //- TODO: determine best tag for this possible error message
        a.button(href='/auth/signup') Click here to Sign up

  script(src="/javascripts/tabManager.js")
  

